      "optional": true
    }
  },
  "devDependencies": {
    "@types/three": "^0.160.0",
    "three": "^0.160.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.7.0"
  },
  "keywords": [
    "three.js",
